<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.jpa.entities.Contact" table="contact">
		<meta attribute="class-description">
			This class contains details of contacts
			(employees) of member/customer
			account.
		</meta>


		<id name="contactId" type="java.lang.Integer">
			<column name="contactId" />
			<generator class="assigned">
			</generator>
		</id>

		<property name="firstName" type="string" column="first_name"></property>
		<property name="lastName" type="string" column="last_name"></property>
		<property name="emailAddress" type="string" column="email_address"></property>
		<property name="gender" type="char" column="gender"></property>
		<property name="phone" type="string" column="phone"></property>
		<property name="status" type="java.lang.Integer" column="status"></property>
		<property name="streetAddress" type="string" column="street_address"></property>
		<property name="city" type="string" column="city"></property>
		<property name="state" type="string" column="state"></property>
		<property name="country" type="string" column="country"></property>
		<property name="hasLogin" type="boolean" column="hasLogin"></property>
		<property name="contactLoginId" type="java.lang.Integer" column="contactLoginId"></property>


		<!-- Many to one Relation between Contact and Account 
		<many-to-one name="account" class="com.jpa.entities.Account"
			fetch="select">
			<column name="accountId" not-null="true" />
		</many-to-one>
		-->
		
		
		<many-to-one name="account" column="accountId" class="com.jpa.entities.Account" not-null="true" lazy="false"/>
		

		<!-- <one-to-one name="loginDetails" class="com.jpa.entities.ContactLoginDetails" 
			cascade="save-update" /> <many-to-one name="loginDetails" class="com.jpa.entities.ContactLoginDetails" 
			unique="true" cascade="all"></many-to-one>          -->
		<one-to-one name="loginDetails" class="com.jpa.entities.ContactLoginDetails"
			cascade="all" />
	</class>

</hibernate-mapping>