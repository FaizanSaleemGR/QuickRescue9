<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.jpa.entities.ContactLoginDetails" table="contact_login_details">
		<meta attribute="class-description">
			This class contains details of contact's logins.
		</meta>

		<id name="contactLoginId" type="java.lang.Integer">
			<column name="contactLoginId" />
			<generator class="assigned">
			</generator>
		</id>

		<property name="username" type="string" column="username"></property>
		<property name="password" type="string" column="password"></property>
		

		<!-- One to One relation between ContactLoginDetails and Contact 
		<one-to-one name="contact" class="com.jpa.entities.Contact"  />-->
		
		 <many-to-one name="contact" column="contactId" unique="true"
            not-null="true" lazy="false" />

	</class>

</hibernate-mapping>